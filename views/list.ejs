                    <div class="values">Thriller <input type="radio" name="genre-s" value="thriller"></div>
                    <div class="values">Romance <input type="radio" name="genre-s" value="romance"></div>
                    <div class="values">Comedy <input type="radio"  name="genre-s" value="comedy"></div>
                    <div class="values">Supernatural <input type="radio" name="genre-s" value="supernatural"></div>
                    <div class="values">Sci-fi <input type="radio" name="genre-s" value="scifi"></div>
                    <div class="values">Horror <input type="radio" name="genre-s" value="miniservice"></div>
                </div>  
                
            </div>
        </div>
        <div class="cards">
           <!-- toonz space -->
        </div>
    </section>

    <%- include('./partials/preloader.ejs') %>
    

    <%- include('./partials/footer.ejs') %>


