    <link rel="shortcut icon" href="/images/twp_logo.jpg" type="image/x-icon">
    <script type="application/ld+json">
        {
          "@context": "https://schema.org",
          "@type": "WebPage",
          "name": "Webtoons - The Webtoon Project",
          "description": "Browse through a vast collection of engaging webtoons and comics on The Webtoon Project. Discover captivating stories and beautiful artwork.",
          "url": "https://thewebtoonproject.com/twp/webtoonz"
